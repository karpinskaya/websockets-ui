{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "rootDir": ".",
        "moduleResolution": "node",
        "baseUrl": ".",
        "allowJs": true,
        "outDir": "build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "index.ts"],
    "exclude": ["build", "front", "node_modules"]
}
